<header>
  <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark p-0">
    <a class="navbar-brand" href="{{ path('home') }}">
        <svg class="logo" height="51" width="75" ><use xlink:href="{{ asset('images/icons/sprite.svg#logo')}}"></svg>
    </a>
    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      {% if is_granted('ROLE_USER') %}
        <div class="user-action dropdown show ml-auto">
            <a class="" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <div class="media">
                <div class="media-left">
                  {% if app.user.picture.url|length > 6 %}
                    <img src="{{ app.user.picture.url }}" alt="user" class="mCS_img_loaded">
                  {% else %}
                    <img src="{{ asset( app.user.picture.webPath('thumbnails')) }}" alt="user" class="mCS_img_loaded">
                  {% endif %}
                </div>
                <div class="media-body">
                  <p class="name">{{ app.user.name }} {{ app.user.surname }} <i class="material-icons">keyboard_arrow_down</i></p>
                  <p class="account-name">{{ app.user.function }}</p>
                </div>
              </div>
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" >
              <a href="{{ path('admin_observation_index') }}" class="dropdown-item">
                  <svg height="21px" width="21px" style="vertical-align: middle;margin-right: -4px;" >
                      <use xlink:href="{{ asset('images/icons/sprite.svg#obs')}}">
                  </svg>
                  Mes observations</a>
              <a href="{{ path('edit_profil') }}" class="dropdown-item">
                <i class="fa fa-user fa-fw"></i>Mon profil</a>
              <a href="{{ path('logout') }}" class="text-danger dropdown-item">
                <i class="fa fa-sign-out fa-fw"></i>DÃ©connection</a>
            </div>
        </div>
      {% endif %}
      <ul class="navbar-nav p-0 m-0 {% if not is_granted('ROLE_USER') %} ml-auto {% endif %}">
        {# <li class="nav-item active">
          <a class="nav-link" href="#"><i class="material-icons">keyboard_arrow_left</i><span class="sr-only">(current)</span></a>
        </li> #}

        {% if is_granted('ROLE_USER') %}
          {% include('partials/notificationAreaNav.html.twig') %}
        {% endif %}

        <li class="nav-item">
          <a class="nav-link active d-flex flex-column justify-content-center" href="{{ path('admin_observation_new') }}">
            <i  class="fa fa-plus text-white position-absolute align-self-center"
                style="font-size:11px;margin-left:-3px;margin-top:3px;">
            </i>
            <svg class="nav-icons"  >
                <use xlink:href="{{ asset('images/icons/sprite.svg#dove')}}">
            </svg>
          </a>
        </li>
        {% if not is_granted('ROLE_USER') %}
          <li class="nav-item">
            <a class="nav-link {% if route == 'login' %}active{% endif %}" href="{{ path('login') }}"><i class="material-icons">input</i></a>
          </li>
        {% endif %}

      </ul>
    </div>
  </nav>
</header>