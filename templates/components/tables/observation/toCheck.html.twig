<div class="tab-pane fade {% if active|default(false) %}show active{% endif %}" id="{{ id }}Obs" role="tabpanel" aria-labelledby="{{ id }}-tab">
  <div class="row observation">
    <div class="col">
      <h6 class="text-light title">{{ title }} (affichage 1 Ã  6 de {{observations|length}} enregistrements)</h6>
    </div>
    <div class="col-auto">
      <a href="{{ path('admin_observation_new') }}" class="text-white btn btn-primary mt-0">
        <i class="fa fa-plus"></i>
        Ajouter
      </a>
    </div>
  </div>
  <table class="table table-striped table-light mt-3">
    <thead>
      <tr>
        <th scope="col">Obs ID</th>
        <th scope="col">Lieu</th>
        <th scope="col">Moment</th>
        <th scope="col">Oiseau</th>
        <th scope="col">Observateur</th>
        <th scope="col">Mail</th>
        <th scope="col-action"></th>
      </tr>
    </thead>
    <tbody>

        {% for obs in observations  %}
          <tr>
            <th scope="row">{{ obs.id }}</th>
            <td> {{obs.location.formatedAddress}} </td>
            <td> {{ obs.ago(obs.dateObs|date()) }} </td>
            <td> {{ obs.bird.taxref.lbNomType }} </td>
            <td> {{ obs.user.name }} {{ obs.user.surname }} </td>
            <td> <i class="fa fa-enveloppe-o fa-fw "></i>{{ obs.user.mail }} </td>
            <!-- actions -->
            <td class="text-right text-right d-inline-flex justify-content-between">
              <a class="p-2" href="{{ path('home') }}"><i class="fa fa-eye"></i></a>
              {{ include('admin/observation/_check_form.html.twig', {observation: obs}, with_context = false) }}
            </td>
          </tr>
        {% endfor %}
    </tbody>
  </table>
</div>