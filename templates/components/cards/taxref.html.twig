  {% if post.picture and post.picture.url  %}
  {% set backgroundTable = '' %}
  {% set btnColor = 'btn-secondary' %}
    <div class="card-image">
      <a href="{{ path('taxref_show', {slug: post.slug}) }}"> <img class="img" src="{{ post.picture.url }}" alt="{{ post.picture.alt }}"> </a>
    </div>
  {% else %}
    {% set backgroundTable = random(['table-info', 'table-danger','','','','','']) %}
    {% if backgroundTable == '' %}
      {% set btnColor = 'btn-secondary' %}
    {% else %}
