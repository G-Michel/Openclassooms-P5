<Table class="table table-striped table-light mt-3">
  <thead>
    <tr>          
      <th>Mes notifications
        <a href="{{ path('admin_user_notifications',{'erase':'yes'})}}"><span class="text-warning pull-right">Effacer</span></a>
      </th>
    </tr>
  </thead>
  {% for notification in userNotifications %}
    <tr>
      <td class="list-group-item text-center" >
        <a href="{{ path('admin_observation_show', {id: notification.getObservation().getId()}) }}">
          <strong>Observation vérifiée par : </strong><span class="text-warning">{{ notification.getFromUser|capitalize }}</span>
          <strong>Oiseau : </strong><span class="text-warning">{{ notification.getBirdName() }}</span><strong> status: </strong> <span class="text-warning">{{ notification.getStatusDefinition() }}</span>
        </a>
      </td>
    </tr>
  {% endfor %}
</Table>