

{% extends "base.html.twig" %}

{% block title %}Inscription - {{parent()}}{% endblock %}
{% block body_id route %}
{% block main_id %}main_{{route}}{% endblock %}

{% block stylesheets %}{% endblock %}

{% block mainLeft %}
<div class="col-sm-3 d-flex" style="position:fixed;top: 56px;bottom: 0;">
	<div class="container mt-auto mb-auto">
    	<h1 class="text-white display-3">{{message[0]}}</h1>
    	<p class="text-primary lead">{{message[1]}}</p>
	</div>
</div>
{% endblock %}

{% block mainRight %}

  	<div class="col col-md-6 offset-md-4 offset-lg-5">
    	<div class="login-form">
        	<div class="form">
          {% for message in app.flashes('flashError') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
          {% endfor %}

          {% if googleRegister is defined %}
            <p><a href="{{googleRegister}}">S'inscrire avec Google plouche</a></p>
          {% endif %}
          {% if facebookRegister is defined %}
            <p><a href="{{facebookRegister|raw }}">S'inscrire avec fessbouk</a></p>
          {% endif %}
        	{{ form_start(form) }}
    				{{ form_widget(form) }}
    				<button type="submit" class="btn btn-primary">S'inscrire</button>
  				{{ form_end(form) }}
    		</div>
  		</div>
	</div>

{% endblock %}
