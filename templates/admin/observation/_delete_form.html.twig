{{ include('observation/_delete_observation_confirmation.html.twig') }}
{% if app.request.attributes.get('_route') == 'admin_observation_index'
   or app.request.attributes.get('_route') == 'admin_home'
%}
  <form
    action="{{ path('admin_observation_delete', {id: observation.id}) }}"
    method="post"
    data-confirmationDelete="true"
    id="delete-form" class="d-inline-flex"
  >
      <input type="hidden" name="token" value="{{ csrf_token('delete') }}" />
      <button type="submit" class="btn btn-link text-danger d-flex m-0 p-0">
          <i class="fa fa-trash" aria-hidden="true"></i>
      </button>
  </form>
{% else %}
  <form
    action="{{ path('admin_observation_delete', {id: observation.id}) }}"
    method="post"
    data-confirmationDelete="true"
    id="delete-form" class="mb-5"
  >
      <input type="hidden" name="token" value="{{ csrf_token('delete') }}" />
      <button type="submit" class="btn btn-lg btn-block btn-danger d-flex justify-content-center">
          <i class="fa fa-trash mr-1" aria-hidden="true"></i>
          Supprimer l'observation
      </button>
  </form>
{% endif %}
