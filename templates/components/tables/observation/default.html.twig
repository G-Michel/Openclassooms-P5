<div class="tab-pane fade {% if id == 'all' %}show active{% endif %}" id="{{ id }}Obs" role="tabpanel" aria-labelledby="{{ id }}-tab">
    <div class="row observation">
      <div class="col">
        <h6 class="title">{{ title }} (affichage 1 Ã  6 de {{observations|length}} enregistrements)</h6>
      </div>
      <div class="col-auto">
        <a href="{{ path('admin_observation_new') }}" class="text-white btn btn-primary btn-round mt-0">
          <i class="fa fa-plus"></i>
          Ajouter
        </a>
      </div>
    </div>
    <table class="table table-striped table-light mt-3">
      <thead>
        <tr>
          <th scope="col">Obs ID</th>
          <th scope="col">Lieu</th>
          <th scope="col">Moment</th>
          <th scope="col">Status</th>
          <th scope="col-action"></th>
        </tr>
      </thead>
      <tbody>
        {% if id == 'all'%}
          {% for obs in observations  %}
            <tr>
              <th scope="row">{{ obs.id }}</th>
              <td>{{obs.location.address}}</td>
              <td> {{ obs.getAgo(obs.dateObs|date()) }} </td>
              <td> {{ obs.bird.taxref.nomValideType }} </td>
              <td>
                <i class="fa fa-circle fa-fw {% if obs.status == 1 %} text-primary{% else %}text-warning{% endif %} "></i>{{ obs.statusDefinition(obs.status) }}
              </td>
              <td class="text-right text-right d-inline-flex justify-content-between">
                <a class="p-2" href="{{ path('admin_observation_show',{ id: obs.id }) }}">
                  <i class="fa fa-eye"></i>
                </a>
                <a class="p-2" href="{{ path('admin_observation_edit',{ id: obs.id }) }}">
                  <i class="fa fa-pencil"></i>
                </a>
                {{ include('admin/observation/_delete_form.html.twig', {observation: obs}, with_context = false) }}
              </td>
            </tr>
          {% endfor %}
        {% elseif id == 'valid' %}
          {% for obs in observations if obs.status == 1  %}
            <tr>
              <th scope="row">{{ post.id }}</th>
              <td>{{post.location.address}}</td>
                <td> {{ post.ago(post.dateObs|date()) }} </td>
                <td> {{ post.bird.taxref.nomValideType }} </td>
                <td>
                  <i class="fa fa-circle fa-fw {% if post.status == 1 %} text-primary{% else %}text-warning{% endif %} "></i>{{ post.statusDefinition(post.status) }}
                </td>
                <td class="text-right text-right d-inline-flex justify-content-between">
                  <a class="p-2" href="{{ path('admin_observation_show',{ id: post.id }) }}">
                    <i class="fa fa-eye"></i>
                  </a>
                  <a class="p-2" href="{{ path('admin_observation_edit',{ id: post.id }) }}">
                    <i class="fa fa-pencil"></i>
                  </a>
                  {{ include('admin/observation/_delete_form.html.twig', {observation: post}, with_context = false) }}
                </td>
            </tr>
          {% endfor %}
        {% else %}
          {% for obs in observations if obs.status == 0  %}
            <tr>
              <th scope="row">{{ post.id }}</th>
              <td>{{post.location.address}}</td>
                <td> {{ post.ago(post.dateObs|date()) }} </td>
                <td> {{ post.bird.taxref.nomValideType }} </td>
                <td>
                  <i class="fa fa-circle fa-fw {% if post.status == 1 %} text-primary{% else %}text-warning{% endif %} "></i>{{ post.statusDefinition(post.status) }}
                </td>
                <td class="text-right text-right d-inline-flex justify-content-between">
                  <a class="p-2" href="{{ path('admin_observation_show',{ id: post.id }) }}">
                    <i class="fa fa-eye"></i>
                  </a>
                  <a class="p-2" href="{{ path('admin_observation_edit',{ id: post.id }) }}">
                    <i class="fa fa-pencil"></i>
                  </a>
                  {{ include('admin/observation/_delete_form.html.twig', {observation: post}, with_context = false) }}
                </td>
            </tr>
          {% endfor %}
        {% endif %}
      </tbody>
    </table>
  </div>